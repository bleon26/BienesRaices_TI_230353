extends ../layout/index

block contenido
    div.py-10
        h1.text-6xl.my-10.font-extrabold.text-center.t-stroke.t-shadow Bienes Raíces  
        h2.text-center.text-2xl.font-extrabold.text-white= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p.bg-transparent.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.border-2.border-orange_red= error.msg

        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/registro" novalidate)
                    input(type="hidden" name="_csrf" value= csrfToken) 
                    div 
                        label.block.text-sm.uppercase.text-purple.mb-3.font-bold(for="nombre") Tu Nombre
                        input#nombre.w-full.px-3.py-2.border.border-purple.rounded-md.placeholder-purple(placeholder="Escribe tu nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')
                    div 
                        label.block.text-sm.uppercase.text-purple.mb-3.font-bold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-purple.rounded-md.placeholder-purple(placeholder="Escribe tu email" type="email" name="email" value= usuario ? usuario.email : '' ) 
                    div 
                        label.block.text-sm.uppercase.text-purple.mb-3.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-purple.rounded-md.placeholder-purple(placeholder="Escribe tu password" type="password" name="password" )        
                    div 
                        label.block.text-sm.uppercase.text-purple.mb-3.font-bold(for="repetir_password") Repetir password
                        input#repetir_password.w-full.px-3.py-2.border.border-purple.rounded-md.placeholder-purple(placeholder="Repite tu password" type="password" name="repetir_password")         
                    
                    div.flex.items-center.justify-between 
                        a.text-blue.text-xs(href="/auth/login") ¿Ya tienes cuenta? Inicia Sesión
                        a.text-blue.text-xs(href="/auth/olvide-password") Olvide mi Password 

                    input(class="w-full bg-cyan hover:bg-blue text-white font-bold py-3 cursor-pointer" type="submit" value="Crear cuenta")    
